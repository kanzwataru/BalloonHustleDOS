.AUTODEPEND

#		*Translator Definitions*
CC      = tcc +BALLOON.CFG
TASM    = TASM
TLIB    = tlib
TLINK   = tlink
CLIBS   = -LC:\DEV\TC\LIB
LLIBS   = /LC:\DEV\TC\LIB # CLIBS and LLIBS are the same, just tlink can't handle the hyphen
HEADERS = -IC:\DEV\TC\INCLUDE -IC:\DEV\BALLOON\SRC\WRECKI~1 -IC:\DEV\BALLOON\SRC\HUSTLE~1 -IC:\DEV\BALLOON\SRC
DEFINES = -DDEBUG
#		*Implicit Rules*
.c.obj:
  $(CC) -c {$< }

.cpp.obj:
  $(CC) -c {$< }

#		*List Macros*


EXE_dependencies =  \
 balloon.obj \
 event.obj \
 resource.obj \
 cactoon.obj \
 vga.obj \
 filesys.obj \
 core.obj \
 render.obj \
 main.obj \
 test.obj \
 wb.obj \
 kb.obj

#		*Explicit Rules*
balloon.exe: balloon.cfg $(EXE_dependencies)
  $(TLINK) /v/x/c $(LLIBS) @&&|
c0l.obj+
balloon.obj+
event.obj+
resource.obj+
cactoon.obj+
vga.obj+
filesys.obj+
core.obj+
render.obj+
main.obj+
test.obj+
wb.obj+
kb.obj
balloon
		# no map file
emu.lib+
mathl.lib+
cl.lib
|


#		*Individual File Dependencies*
balloon.obj: balloon.cfg src\wrecki~1\balloon.c 
	$(CC) -c src\wrecki~1\balloon.c

event.obj: balloon.cfg src\hustle~1\engine\event.c 
	$(CC) -c src\hustle~1\engine\event.c

resource.obj: balloon.cfg src\wrecki~1\resource.c 
	$(CC) -c src\wrecki~1\resource.c

cactoon.obj: balloon.cfg src\wrecki~1\cactoon.c 
	$(CC) -c src\wrecki~1\cactoon.c

vga.obj: balloon.cfg src\hustle~1\platform\vga.c 
	$(CC) -c src\hustle~1\platform\vga.c

filesys.obj: balloon.cfg src\hustle~1\platform\filesys.c 
	$(CC) -c src\hustle~1\platform\filesys.c

core.obj: balloon.cfg src\hustle~1\engine\core.c 
	$(CC) -c src\hustle~1\engine\core.c

render.obj: balloon.cfg src\hustle~1\engine\render.c 
	$(CC) -c src\hustle~1\engine\render.c

main.obj: balloon.cfg src\main.c 
	$(CC) -c src\main.c

test.obj: balloon.cfg src\test.c 
	$(CC) -c src\test.c

wb.obj: balloon.cfg src\wrecki~1\wb.c 
	$(CC) -c src\wrecki~1\wb.c

kb.obj: balloon.cfg src\hustle~1\platform\kb.c 
	$(CC) -c src\hustle~1\platform\kb.c

#		*Compiler Configuration File*
balloon.cfg: MKTURBOC
  copy &&|
-ml
-2
-K
-C
-v
-y
-G
-O
-Z
-Y
-h
-b-
-vi-
-w-ret
-w-nci
-w-inl
-wpin
-wamb
-wamp
-w-par
-wasm
-wcln
-w-cpt
-wdef
-w-dup
-w-pia
-wsig
-wnod
-w-ill
-w-sus
-wstv
-wucp
-wuse
-w-ext
-w-ias
-w-ibc
-w-pre
-w-nst
$(HEADERS)
$(CLIBS)
-D__BORLANDC__
-P-.C
| balloon.cfg


